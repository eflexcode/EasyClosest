<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowAnimationStyle">@style/SlideAnimationStyle</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
    </style>

    <style name="ForMainActivity" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowAnimationStyle">@style/SlideAnimationStyle</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
    </style>


    <style name="ForCropActivity" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">#000000</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowAnimationStyle">@style/SlideAnimationStyle</item>
    </style>

    <style name="SlideAnimationStyle" parent="android:Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_rigth</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_rigth</item>

    </style>

    <style name="Splash" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
                <item name="android:windowBackground">@drawable/splash_back</item>
        <!--        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>-->
    </style>

    <style name="NavT" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="NavI" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">11sp</item>
    </style>

    <style name="tatTextStyle">
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">15sp</item>
    </style>
    
    <style name="CustomBS" parent="@style/Theme.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomB</item>
    </style>
    
    <style name="CustomB" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/bottomSheet</item>
    </style>

    <style name="bottomSheet">
        <!--        <item name="background">@drawable/botom_sheet_background</item>-->
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>
    <style name="AppBottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/bottomSheet2</item>
    </style>


    <style name="bottomSheet2" parent="Widget.Design.BottomSheet.Modal">
            <item name="android:background">@drawable/botom_sheet_background</item>
    </style>
</resources>